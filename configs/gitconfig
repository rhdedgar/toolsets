; these are some keystroke saving aliases. not required, but handy.
[alias]
       ci = commit
       ch = cherry-pick -x
       co = checkout
       br = branch -v
       st = status
       tag = tag -a
       log1 = log --oneline
       lol = log --graph --decorate --pretty=oneline --abbrev-commit
       lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[url "git@github.com:"]
  insteadOf = https://github.com/
